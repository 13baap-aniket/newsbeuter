vbox
  @style_normal[background]:bg=black,fg=white
  @info#style_normal[info]:bg=blue,fg=yellow,attr=bold
  label#info
    text[head]:"Help"
    .expand:h
  textview[helptext]
    style_normal[article]:bg=black,fg=white
    style_end[styleend]:fg=blue,attr=bold
    .expand:vh
    offset[helpoffset]:0
  label#info
    text[help]:"q:Quit"
    .expand:h
  hbox[lastline]
    .expand:0
    label[msglabel]
      text[msg]:""
      .expand:h
