vbox
  @style_normal[background]:bg=black,fg=white
  @info#style_normal[info]:bg=blue,fg=yellow,attr=bold
  label#info
    text[head]:"Article '#'"
    .expand:h
  textview[article]
    style_normal[article]:bg=black,fg=white
    style_end[styleend]:fg=blue,attr=bold
    .expand:vh
    offset[articleoffset]:0
  label#info
    text[help]:"q:Quit s:Save o:Open in Browser n:Next Unread"
    .expand:h
  label
    text[msg]:""
    .expand:h
